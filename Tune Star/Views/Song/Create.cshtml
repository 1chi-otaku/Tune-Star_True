@model Tune_Star.BLL.DTO.SongDTO

@{
    ViewData["Title"] = "Upload!";
}

<h2>Upload your song!</h2>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.Label("Title:")
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Artist:")
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Genre:")
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.ListTeams as SelectList"></select>
            </div>
            <div class="form-group">
                @Html.Label("Image:")
                <input type="file" name="uploadedFile" class="form-control" accept=".png, .jpg, .jpeg" />
            </div>
            <div class="form-group">
                @Html.Label("Song:")
                <input type="file" name="uploadedSong" class="form-control" accept=".mp3, audio/*" />
            </div>
            <div class="form-group">

                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>